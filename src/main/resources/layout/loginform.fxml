                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                    </VBox.margin>
                    <font>
                        <Font name="CG Times Bold" size="20.0" />
                    </font>
                </Button>
            </children>
        </VBox>
        <ImageView fitHeight="120.0" fitWidth="134.0" layoutX="136.0" layoutY="5.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../image/Logo.png" />
            </image>
        </ImageView>
        <Label layoutX="74.0" layoutY="139.0" text="Login in To Your Account">
            <font>
                <Font name="A831-Roman-Bold" size="20.0" />
            </font>
        </Label>
    </children>
