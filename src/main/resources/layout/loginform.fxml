                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                    </VBox.margin>
                </ComboBox>
                <PasswordField fx:id="passwordpwd" prefHeight="43.0" prefWidth="361.0" promptText="စကားဝှက်ထည့်ရန်။" style="-fx-border-color: #515151; -fx-background-radius: 5; -fx-border-radius: 5;">
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                    </VBox.margin>
                </PasswordField>
                <Label fx:id="forgotlb" text="Forgot Password ? " textFill="#0b5685">
